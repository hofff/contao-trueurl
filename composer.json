{
  "name": "hofff/contao-trueurl",
  "description": "Folderlike page alias' with different editing tools and an improved frontend page selection algorithm.",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "folderurl",
    "alias",
    "page",
    "path",
    "url",
    "contao"
  ],
  "authors": [
    {
      "name": "Nicky Hoff",
      "email": "nick@hofff.com",
      "homepage": "https://www.hofff.com/",
      "role": "Maintainer"
    },
    {
      "name": "David Molineus",
      "email": "david@hofff.com",
      "homepage": "https://www.hofff.com/",
      "role": "Developer"
    },
    {
      "name": "Oliver Hoff",
      "email": "oliver@hofff.com",
      "homepage": "https://www.hofff.com/",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/hofff/contao-trueurl/issues",
    "source": "https://github.com/hofff/contao-trueurl"
  },
  "require": {
    "php": "^8.1",
    "ext-pcre": "*",
    "ext-pdo": "*",
    "contao/core-bundle": "^4.13 || ^5.3",
    "doctrine/dbal": "^3.8",
    "hofff/contao-root-relations": "^3.1",
    "symfony/asset": "^5.4 || ^6.4",
    "symfony/config": "^5.4 || ^6.4",
    "symfony/dependency-injection": "^5.4 || ^6.4",
    "symfony/http-foundation": "^5.4 || ^6.4",
    "symfony/http-kernel": "^5.4 || ^6.4",
    "symfony/security-core": "^5.4 || ^6.4",
    "symfony/translation-contracts": "^1.1.6 || ^2 || 3.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.11",
    "doctrine/coding-standard": "^12.0",
    "phpcq/runner-bootstrap": "^1.0@dev"
  },
  "replace": {
    "backboneit/contao-trueurl": "self.version",
    "contao-legacy/backboneit_trueurl": "self.version"
  },
  "autoload": {
    "psr-4": {
      "Hofff\\Contao\\TrueUrl\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "contao/manager-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "4.1.x-dev",
      "dev-master": "4.0.x-dev"
    },
    "contao-manager-plugin": "Hofff\\Contao\\TrueUrl\\ContaoManager\\Plugin"
  }
}
